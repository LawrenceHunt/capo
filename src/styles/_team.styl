.team-grid
  display flex
  flex-wrap wrap
  width 100vw
  height 100vh


.player-card
  width 200px
  height 300px
  margin 10px
  perspective 300px
  opacity 0.8


.content
  position absolute
  width 100%
  height 100%
  box-shadow 0 0 15px rgba(0,0,0,0.1)

  transition transform 1s
  transform-style preserve-3d


.player-card:hover .content
  transform rotateY( 180deg )
  transition transform 1s


.front, .back
  position absolute
  height 100%
  width 100%
  background white
  padding-top 5px
  color #03446A
  text-align center
  font-size 30px
  border-radius 5px
  backface-visibility hidden


.back
  background #040404
  color white
  transform rotateY( 180deg )

.avatar
  height 250px
  border-radius 5px

.stats
  font-size: 0.5em
  height 200px
  text-align left
  line-height: 50px

.mvp
  color: gold
