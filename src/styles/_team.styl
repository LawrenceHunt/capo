.team
  display flex
  width 100vw

.squad-list
  background-color red
  display flex
  flex-direction column
  flex 1
  min-width 95px
  height 100vh
  color white
  opacity 0.7
  justify-content flex-start
  align-items center
  overflow-y scroll

.player
  padding 20px
  cursor pointer

.bio
  height 80vh
  display grid
  grid-template-columns 15% 15% 35% 35%
  grid-template-rows 10% 20% 20% 20% 20% 10%
  border solid black 1px
  border-radius 20px
  margin auto 20px
  flex 4

.player-name
  grid-column-start 1
  grid-column-end 5
  text-align center
  padding 10px
  border-bottom solid black 1px

.player-picture
  position relative
  grid-column-start 1
  grid-column-end 3
  grid-row-start 2
  grid-row-end 6
  border solid black 1px
  border-radius 20px
  margin 5px

.player-picture span
  position absolute
  top 45%
  left 45%
  transform rotate(45deg)

.player-stats
  grid-column-start 3
  grid-column-end 5
  display flex
  flex-direction column

.player-stats li
  margin 5px
