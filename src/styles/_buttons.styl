
button
  display inline-flex
  justify-content center
  align-items center
  border-radius 5px
  background none
  color white
  padding 3px

  span
    margin 5px

  &:hover
    color black
    background white
    opacity 0.8

  &.btn-large
    font-size 15px

  &.btn-outline
    border 1px solid white
